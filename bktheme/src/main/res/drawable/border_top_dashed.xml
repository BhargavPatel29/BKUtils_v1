<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#999"
                android:dashWidth="4dp"
                android:dashGap="2dp" />
            <solid android:color="#00CCCCCC" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>