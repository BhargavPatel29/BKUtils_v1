<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="0dp"
                android:color="#fff" />
            <solid android:color="#CCC" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0dp"
                android:color="#fff" />
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>